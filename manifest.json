{
  "manifest_version": 3,
  "name": "Amazon Product Info",
  "version": "1.0",
  "description": "Quickly retrieve product information from Amazon product pages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.com.be/*",
    "https://api.exchangerate-api.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*/dp/*",
        "*://*.amazon.co.uk/*/dp/*",
        "*://*.amazon.fr/*/dp/*",
        "*://*.amazon.de/*/dp/*",
        "*://*.amazon.it/*/dp/*",
        "*://*.amazon.es/*/dp/*",
        "*://*.amazon.nl/*/dp/*",
        "*://*.amazon.com.be/*/dp/*",
        "*://*.amazon.com/gp/product/*",
        "*://*.amazon.co.uk/gp/product/*",
        "*://*.amazon.fr/gp/product/*",
        "*://*.amazon.de/gp/product/*",
        "*://*.amazon.it/gp/product/*",
        "*://*.amazon.es/gp/product/*",
        "*://*.amazon.nl/gp/product/*",
        "*://*.amazon.com.be/gp/product/*"
      ],
      "js": ["content.js", "currency.js", "history.js", "price-comparison.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 